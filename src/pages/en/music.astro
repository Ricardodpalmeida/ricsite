---
/**
 * Music Page - English
 * 
 * Displays music information, releases, and links.
 */
import MainLayout from '../../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

// Get current language and translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout 
  title="Music | Ricardo Almeida" 
  description="Discover Ricardo Almeida's music, including solo works and collaborations."
  currentLanguage={lang}
>
  <main class="music-container">
    <h1 class="music-title">Music</h1>
    <p class="music-intro">
      Beyond my career in technology, I compose and produce electronic and experimental music. Here are some of my works:
    </p>
    
    <div class="music-embed">
      <iframe title="Music on SoundCloud" width="100%" height="450" scrolling="no" frameborder="no" allow="autoplay" 
        src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/35546273&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true">
      </iframe>
    </div>
    
    <p class="music-contact">
      Interested in music collaborations? Contact me via <a href="mailto:music@ricbits.cc">music@ricbits.cc</a>.
    </p>
  </main>
</MainLayout>

<style>
  .music-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
    min-height: calc(100vh - 200px);
    animation: fadeIn 0.5s ease-out;
  }
  
  .music-title {
    font-size: var(--font-size-3xl);
    text-align: center;
    margin-bottom: 2rem;
    font-family: var(--font-family-title);
  }
  
  .music-intro {
    font-size: var(--font-size-lg);
    text-align: center;
    max-width: 65ch;
    margin: 0 auto 3rem;
    line-height: var(--line-height-loose);
    font-family: var(--font-family-base);
  }
  
  .music-embed {
    margin-bottom: 3rem;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }
  
  .music-embed iframe {
    display: block;
  }
  
  .music-contact {
    text-align: center;
    font-size: var(--font-size-base);
    margin-top: 2rem;
    font-family: var(--font-family-base);
  }
  
  .music-contact a {
    color: var(--color-cosmic-latte);
    position: relative;
    transition: all var(--transition-base);
  }
  
  .music-contact a::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    bottom: -3px;
    left: 0;
    background-color: var(--color-cosmic-latte);
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }
  
  .music-contact a:hover::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }
  
  @media (max-width: 768px) {
    .music-title {
      font-size: var(--font-size-2xl);
      margin-bottom: 1.5rem;
    }
    
    .music-intro {
      font-size: var(--font-size-base);
      margin-bottom: 2rem;
    }
  }
</style> 