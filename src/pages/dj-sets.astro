---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="DJ Sets | Coming Soon">
  <div class="wip-container">
    <div class="wip-content">
      <h1 class="wip-title">DJ Sets <span class="highlight">Coming Soon</span></h1>
      <div class="construction-icon">ðŸŽ§</div>
      <p class="wip-description">
        This section will feature a collection of my DJ sets. I'll be sharing my 
        passion for music through carefully curated mixes spanning various genres. 
        Check back soon to listen to my latest sets and discover my musical journey.
      </p>
      <div class="countdown">
        <div class="timer-block">
          <span class="timer-number">Soon</span>
          <span class="timer-label">Very Soon</span>
        </div>
      </div>
      <a href="/" class="back-button">Back to Home</a>
    </div>
  </div>
</MainLayout>

<style>
  .wip-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 200px);
    padding: 2rem 1rem;
    text-align: center;
  }

  .wip-content {
    max-width: 600px;
    animation: fadeIn 0.8s ease-out;
  }

  .wip-title {
    font-size: var(--font-size-3xl);
    margin-bottom: 2rem;
  }

  .construction-icon {
    font-size: 5rem;
    margin-bottom: 2rem;
    animation: spin 4s linear infinite;
  }

  .wip-description {
    font-size: var(--font-size-lg);
    margin-bottom: 3rem;
    line-height: var(--line-height-loose);
    opacity: 0.9;
  }

  .countdown {
    display: flex;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .timer-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1rem 2rem;
    margin: 0 0.5rem;
    background-color: rgba(255, 248, 231, 0.05);
    border-radius: 8px;
    border: 1px solid var(--color-cosmic-latte-20);
    animation: pulse 3s infinite;
  }

  .timer-number {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-cosmic-latte);
  }

  .timer-label {
    font-size: var(--font-size-sm);
    margin-top: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .back-button {
    display: inline-block;
    padding: 0.75rem 2rem;
    background-color: transparent;
    color: var(--color-white);
    border: 1px solid var(--color-cosmic-latte);
    border-radius: 4px;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    transition: all var(--transition-base);
    text-decoration: none;
  }

  .back-button:hover {
    background-color: var(--color-cosmic-latte-10);
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }

  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 0 rgba(255, 248, 231, 0.2);
    }
    50% {
      box-shadow: 0 0 20px rgba(255, 248, 231, 0.2);
    }
  }

  @media (max-width: 768px) {
    .wip-title {
      font-size: var(--font-size-2xl);
    }

    .construction-icon {
      font-size: 4rem;
    }

    .wip-description {
      font-size: var(--font-size-base);
    }
  }
</style> 