---
/**
 * About Page
 * 
 * Displays detailed personal and professional information using the Profile component.
 */
import MainLayout from '../layouts/MainLayout.astro';
import Profile from '../components/Profile.jsx';
import { getCollection } from 'astro:content';

// Get profile data from content collection
const profileData = await getCollection('profile');
const profileInfo = profileData.length > 0 ? profileData[0].data : null;
---

<MainLayout 
  title="About | Ricardo Almeida" 
  description="Learn more about Ricardo Almeida, Data & AI Manager at PwC Portugal and Cloud Solution Architect."
>
  <main class="about-container">
    <h1 class="about-title">About <span class="highlight">Me</span></h1>
    <Profile client:load profileData={profileInfo} currentLanguage={Astro.currentLocale || 'en'} />
  </main>
</MainLayout>

<style>
  .about-container {
    padding: 2rem 0;
    min-height: calc(100vh - 150px); /* Ensure footer is at the bottom */
    animation: fadeIn 0.5s ease-out;
  }
  
  .about-title {
    font-size: var(--font-size-3xl);
    text-align: center;
    margin-bottom: 2rem;
  }
  
  @media (max-width: 768px) {
    .about-title {
      font-size: var(--font-size-2xl);
      margin-bottom: 1.5rem;
    }
  }
</style> 