---
import MainLayout from '../layouts/MainLayout.astro';

// Use reCAPTCHA v3 site key
const recaptchaSiteKey = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY || '6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI';
---

<MainLayout title="Contact | Ricardo Almeida" description="Get in touch with Ricardo Almeida, Data & AI Manager and Cloud Solution Architect.">
  <div class="contact-container">
    <div class="contact-content">
      <h1 class="contact-title">Get in <span class="highlight">Touch</span></h1>
      <p class="contact-description">
        Feel free to reach out if you'd like to discuss technology, share ideas, 
        or just want to say hello. I'm always open to interesting conversations 
        and connections.
      </p>
      
      <button id="contact-cta" class="contact-cta-button">Send me a message</button>
      
      <form id="contact-form" class="contact-form hidden" action="https://formsubmit.co/ricardodpa@gmail.com" method="POST">
        <!-- Honeypot field to prevent spam -->
        <input type="text" name="_honey" style="display:none">
        
        <!-- Disable captcha from FormSubmit as we're using our own -->
        <input type="hidden" name="_captcha" value="false">
        
        <!-- Redirect to a thank you page after submission -->
        <input type="hidden" name="_next" value="https://me.ricbits.cc/thanks">
        
        <!-- Hidden field for reCAPTCHA token -->
        <input type="hidden" id="recaptcha-response" name="g-recaptcha-response" value="">
        
        <div class="form-group">
          <label for="name">Your Name</label>
          <input type="text" id="name" name="name" required />
        </div>
        
        <div class="form-group">
          <label for="email">Your Email</label>
          <input type="email" id="email" name="email" required />
        </div>
        
        <div class="form-group">
          <label for="subject">Subject</label>
          <input type="text" id="subject" name="subject" required />
        </div>
        
        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>
        
        <button type="submit" id="submit-button" class="submit-button">Send Message</button>
        
        <p class="recaptcha-terms">
          This site is protected by reCAPTCHA v3 and the Google
          <a href="https://policies.google.com/privacy" target="_blank" rel="noopener noreferrer">Privacy Policy</a> and
          <a href="https://policies.google.com/terms" target="_blank" rel="noopener noreferrer">Terms of Service</a> apply.
        </p>
      </form>
    </div>
  </div>
</MainLayout>

<script is:inline define:vars={{ recaptchaSiteKey }}>
  // Load reCAPTCHA v3 script dynamically
  (function() {
    const script = document.createElement('script');
    script.src = `https://www.google.com/recaptcha/api.js?render=${recaptchaSiteKey}`;
    script.async = true;
    script.defer = true;
    document.head.appendChild(script);
  })();

  // Form expand/collapse functionality
  document.addEventListener('DOMContentLoaded', () => {
    const ctaButton = document.getElementById('contact-cta');
    const contactForm = document.getElementById('contact-form');
    const submitButton = document.getElementById('submit-button');
    
    if (ctaButton && contactForm) {
      ctaButton.addEventListener('click', () => {
        contactForm.classList.remove('hidden');
        contactForm.classList.add('form-visible');
        ctaButton.classList.add('hidden');
        
        // Scroll to form
        contactForm.scrollIntoView({ behavior: 'smooth' });
      });
    }
    
    // Handle form submission with reCAPTCHA
    if (contactForm) {
      contactForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Show loading state
        if (submitButton) {
          submitButton.disabled = true;
          submitButton.textContent = 'Sending...';
        }
        
        // Execute reCAPTCHA to get a token - wait for reCAPTCHA to be loaded
        if (typeof grecaptcha !== 'undefined' && grecaptcha) {
          grecaptcha.ready(function() {
            grecaptcha.execute(recaptchaSiteKey, {action: 'submit'}).then(function(token) {
              // Add the token to the form
              document.getElementById('recaptcha-response').value = token;
              
              // Now submit the form
              contactForm.submit();
            }).catch(function(error) {
              console.error('reCAPTCHA error:', error);
              alert('There was an error verifying that you are not a robot. Please try again.');
              
              // Reset submit button
              if (submitButton) {
                submitButton.disabled = false;
                submitButton.textContent = 'Send Message';
              }
            });
          });
        } else {
          console.error('reCAPTCHA not loaded');
          alert('reCAPTCHA could not be loaded. Please refresh the page and try again.');
          
          // Reset submit button
          if (submitButton) {
            submitButton.disabled = false;
            submitButton.textContent = 'Send Message';
          }
        }
      });
    }
  });
</script>

<style>
  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
    animation: fadeIn 0.5s ease-out;
  }
  
  .contact-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 700px;
    margin: 0 auto;
  }
  
  .contact-title {
    font-size: var(--font-size-3xl);
    margin-bottom: 1rem;
  }
  
  .contact-description {
    font-size: var(--font-size-lg);
    line-height: var(--line-height-loose);
    max-width: 65ch;
    margin-bottom: 2rem;
  }
  
  /* Contact CTA Button */
  .contact-cta-button {
    align-self: center;
    background-color: var(--color-cosmic-latte-10);
    color: var(--color-white);
    border: 1px solid var(--color-cosmic-latte);
    padding: 1rem 2.5rem;
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
    border-radius: 4px;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-family-base);
    margin: 1.5rem 0 2.5rem;
    position: relative;
    overflow: hidden;
  }
  
  .contact-cta-button::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background-color: var(--color-cosmic-latte-20);
    transition: width var(--transition-base);
    z-index: 1;
  }
  
  .contact-cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
  }
  
  .contact-cta-button:hover::after {
    width: 100%;
  }
  
  .contact-cta-button span {
    position: relative;
    z-index: 2;
  }
  
  /* Contact form */
  .contact-form {
    width: 100%;
    opacity: 1;
    transform: translateY(0);
    transition: opacity 0.4s ease, transform 0.4s ease, max-height 0.4s ease;
  }
  
  .form-visible {
    animation: slideDown 0.5s forwards;
  }
  
  .hidden {
    display: none;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: var(--font-weight-medium);
  }
  
  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.85rem;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid var(--color-gray-200);
    border-radius: 4px;
    color: var(--color-white);
    font-family: var(--font-family-base);
    font-size: var(--font-size-base);
    transition: all var(--transition-base);
  }
  
  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-cosmic-latte);
    background-color: rgba(255, 255, 255, 0.08);
    box-shadow: 0 0 0 2px rgba(255, 248, 231, 0.1);
  }
  
  /* reCAPTCHA terms notice */
  .recaptcha-terms {
    margin-top: 1.5rem;
    font-size: 0.8rem;
    color: var(--color-gray-600);
    text-align: center;
  }
  
  .recaptcha-terms a {
    color: var(--color-cosmic-latte);
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }
  
  .recaptcha-terms a:hover {
    opacity: 0.8;
  }
  
  .submit-button {
    background-color: var(--color-cosmic-latte-10);
    color: var(--color-white);
    border: 1px solid var(--color-cosmic-latte);
    padding: 0.85rem 2.5rem;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    border-radius: 4px;
    cursor: pointer;
    transition: all var(--transition-base);
    font-family: var(--font-family-base);
    margin-top: 0.5rem;
  }
  
  .submit-button:hover {
    background-color: var(--color-cosmic-latte-20);
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  }
  
  .submit-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive styles */
  @media (max-width: 768px) {
    .contact-title {
      font-size: var(--font-size-2xl);
    }
    
    .contact-description {
      font-size: var(--font-size-base);
      max-width: 100%;
    }
    
    .contact-cta-button {
      width: 100%;
      padding: 0.8rem 1.5rem;
      font-size: var(--font-size-base);
    }
  }
</style> 