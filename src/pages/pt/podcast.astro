---
// @ts-nocheck
/**
 * Podcast Page - Portuguese
 * 
 * Displays podcast information and embedded episodes.
 */
import MainLayout from '../../layouts/MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

// Get current language and translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<MainLayout 
  title="Podcast | Ricardo Almeida" 
  description="Descubra o podcast 'Mesa do Canto' onde exploramos temas de cultura, política, filosofia, e mais."
  currentLanguage={lang}
>
  <main class="podcast-container">
    <h1 class="podcast-title">Podcast</h1>
    <p class="podcast-intro">
      'Mesa do Canto' é um podcast em português onde eu e um amigo nos juntamos para discutir uma variedade de temas, desde cultura, política e filosofia até história, economia e tecnologia.
    </p>
    
    <!-- Spotify Embed Container -->
    <div id="spotify-embed" class="podcast-embed"></div>
  </main>
  
  <!-- Spotify iFrame API Script -->
  <script src="https://open.spotify.com/embed/iframe-api/v1" async></script>
  
  <script is:inline>
    // Initialize Spotify Embed with the iFrame API 
    window.onSpotifyIframeApiReady = function(IFrameAPI) {
      const element = document.getElementById('spotify-embed');
      const options = {
        uri: 'spotify:show:4lj3PvhecSWd5wUJAF3Lk6',
        width: '100%',
        height: '352',
        theme: 'dark'
      };
      IFrameAPI.createController(element, options, function(embedController) {
        // Controller is ready
        console.log('Spotify embed controller ready');
      });
    };
  </script>
</MainLayout>

<style>
  .podcast-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
    min-height: calc(100vh - 200px);
    animation: fadeIn 0.5s ease-out;
  }
  
  .podcast-title {
    font-size: var(--font-size-3xl);
    text-align: center;
    margin-bottom: 2rem;
    font-family: var(--font-family-title);
  }
  
  .podcast-intro {
    font-size: var(--font-size-lg);
    text-align: center;
    max-width: 65ch;
    margin: 0 auto 3rem;
    line-height: var(--line-height-loose);
    font-family: var(--font-family-base);
  }
  
  .podcast-embed {
    margin-bottom: 3rem;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    min-height: 352px; /* Placeholder height until iframe loads */
  }
  
  @media (max-width: 768px) {
    .podcast-title {
      font-size: var(--font-size-2xl);
      margin-bottom: 1.5rem;
    }
    
    .podcast-intro {
      font-size: var(--font-size-base);
      margin-bottom: 2rem;
    }
  }
</style> 