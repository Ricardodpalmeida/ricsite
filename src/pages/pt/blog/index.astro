---
/**
 * Blog Index Page - Portuguese
 * 
 * Displays a list of blog posts with filtering by language.
 */
import MainLayout from '../../../layouts/MainLayout.astro';
import { getCollection } from 'astro:content';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

// Get current language and translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Get all blog posts that are not drafts and are in the current language
const posts = await getCollection('blog', ({ data }) => {
  return !data.draft && (!data.language || data.language === 'pt');
});

// Sort posts by date
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<MainLayout 
  title="Blog | Ricardo Almeida"
  description="Artigos e insights sobre IA, arquitetura em nuvem e tecnologia por Ricardo Almeida"
  currentLanguage={lang}
>
  <main className="blog-container">
    <div className="blog-header">
      <h1 className="blog-title">Blog</h1>
      <a href="/pt/rss.xml" className="rss-link" title="Feed RSS" aria-label="Inscreva-se no feed RSS">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 11a9 9 0 0 1 9 9"></path>
          <path d="M4 4a16 16 0 0 1 16 16"></path>
          <circle cx="5" cy="19" r="1"></circle>
        </svg>
        <span>RSS</span>
      </a>
    </div>
    
    {sortedPosts.length === 0 ? (
      <p className="no-posts">Em breve... Os artigos do blog est√£o sendo preparados.</p>
    ) : (
      <ul className="posts-grid">
        {sortedPosts.map((post) => (
          <li className="post-card">
            <a href={`/pt/blog/${post.slug}/`} className="post-link">
              {post.data.heroImage && (
                <div className="post-image-container">
                  <img 
                    src={post.data.heroImage} 
                    alt={`Imagem de capa para ${post.data.title}`}
                    className="post-image"
                    loading="lazy" 
                  />
                </div>
              )}
              <div className="post-content">
                <h2 className="post-title">{post.data.title}</h2>
                <time className="post-date" dateTime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('pt-BR', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric' 
                  })}
                </time>
                {post.data.description && (
                  <p className="post-description">{post.data.description}</p>
                )}
              </div>
            </a>
          </li>
        ))}
      </ul>
    )}
  </main>
</MainLayout>

<style>
  .blog-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
    min-height: calc(100vh - 200px);
    animation: fadeIn 0.5s ease-out;
  }
  
  .blog-header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 3rem;
    position: relative;
  }
  
  .blog-title {
    font-size: var(--font-size-3xl);
    text-align: center;
    font-family: var(--font-family-title);
  }
  
  .rss-link {
    position: absolute;
    right: 0;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--color-cosmic-latte);
    text-decoration: none;
    font-size: var(--font-size-sm);
    opacity: 0.8;
    transition: opacity var(--transition-base);
  }
  
  .rss-link:hover {
    opacity: 1;
  }
  
  .rss-link svg {
    width: 16px;
    height: 16px;
  }
  
  .no-posts {
    text-align: center;
    font-size: var(--font-size-lg);
    color: var(--color-cosmic-latte);
    margin: 4rem 0;
    font-family: var(--font-family-base);
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    list-style: none;
    padding: 0;
  }
  
  .post-card {
    border-radius: 8px;
    overflow: hidden;
    background-color: rgba(30, 30, 30, 0.3);
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
  }
  
  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    border-color: var(--color-cosmic-latte-20);
  }
  
  .post-link {
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }
  
  .post-image-container {
    height: 160px;
    overflow: hidden;
  }
  
  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-base);
  }
  
  .post-card:hover .post-image {
    transform: scale(1.05);
  }
  
  .post-content {
    padding: 1.5rem;
  }
  
  .post-title {
    font-size: var(--font-size-lg);
    margin-bottom: 0.5rem;
    font-weight: var(--font-weight-medium);
    font-family: var(--font-family-title);
  }
  
  .post-date {
    display: block;
    font-size: var(--font-size-sm);
    margin-bottom: 1rem;
    color: var(--color-gray-600);
    font-family: var(--font-family-base);
  }
  
  .post-description {
    font-size: var(--font-size-sm);
    line-height: var(--line-height-base);
    font-family: var(--font-family-base);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  @media (max-width: 768px) {
    .blog-title {
      font-size: var(--font-size-2xl);
      margin-bottom: 0;
    }
    
    .blog-header {
      flex-direction: column;
      gap: 1rem;
      margin-bottom: 2rem;
    }
    
    .rss-link {
      position: static;
    }
    
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style> 