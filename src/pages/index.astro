---
/**
 * Root Index Page - Fully styled landing page that redirects to the appropriate language
 */
import { defaultLang, detectBrowserLanguage, languages } from '../i18n/utils';
import '../styles/global.css';

// Detect the language on the server
const detectedLang = detectBrowserLanguage();
const redirectLang = detectedLang && detectedLang in languages ? detectedLang : 'en';
const redirectUrl = `/${redirectLang}/`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Ricardo Almeida - Data & AI Manager | Intelligent Products, Automation, and Gen AI">
  <title>Ricardo Almeida</title>
  <style>
    :root {
      color-scheme: dark;
    }
    
    html, body {
      background-color: #2c2c2c;
      color: #fff8e7;
      margin: 0;
      padding: 0;
      height: 100%;
      width: 100%;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }
    
    .loading-container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      width: 100vw;
      background-color: #2c2c2c;
      transition: opacity 0.3s ease;
    }
    
    .logo {
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 2rem;
      color: #fff8e7;
    }
    
    .spinner {
      width: 40px;
      height: 40px;
      border: 3px solid rgba(255, 248, 231, 0.2);
      border-radius: 50%;
      border-top-color: #fff8e7;
      animation: spin 1s ease-in-out infinite;
    }
    
    @keyframes spin {
      to { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="loading-container">
    <div class="logo">RA</div>
    <div class="spinner"></div>
  </div>

  <script define:vars={{ redirectUrl }}>
    // Make sure the background is rendered first
    document.addEventListener('DOMContentLoaded', () => {
      // Set a timeout to ensure the page is visible before redirecting
      setTimeout(() => {
        window.location.href = redirectUrl;
      }, 300);
    });
  </script>
</body>
</html>