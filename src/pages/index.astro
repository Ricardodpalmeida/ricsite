---
/**
 * Root Index Page - Simple redirect to the appropriate language
 */
import { defaultLang, detectBrowserLanguage, languages } from '../i18n/utils';

// Detect the language on the server
const detectedLang = detectBrowserLanguage();
const redirectLang = detectedLang && languages[detectedLang] ? detectedLang : defaultLang;
const redirectUrl = `/${redirectLang}/`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Ricardo Almeida - Data & AI Manager | Intelligent Products, Automation, and Gen AI">
  <title>Ricardo Almeida</title>
  <meta http-equiv="refresh" content={`0;url=${redirectUrl}`}>
  <style>
    :root {
      color-scheme: dark;
    }
    
    html, body {
      background-color: #2c2c2c;
      margin: 0;
      padding: 0;
      height: 100%;
      width: 100%;
    }
  </style>
</head>
<body>
</body>
</html>