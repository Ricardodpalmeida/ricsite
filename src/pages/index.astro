---
/**
 * Home Page Redirector
 * 
 * Redirects the user from the root path '/' to the default language path (e.g., '/en/').
 */
import { defaultLang } from '../i18n/ui';
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="refresh" content={`0;url=/${defaultLang}/`} />
    <title>Redirecting...</title>
  </head>
  <body>
    <p>Redirecting to <a href={`/${defaultLang}/`}>the site in {defaultLang}</a>...</p>
    
    <script define:vars={{ defaultLang }}>
      window.location.href = `/${defaultLang}/`;
    </script>
  </body>
</html>