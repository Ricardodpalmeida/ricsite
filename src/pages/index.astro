---
/**
 * Home Page Redirector
 * 
 * Redirects the user from the root path '/' to their browser language path
 * or the default language path if their language is not supported.
 */
import { defaultLang, languages } from '../i18n/ui';
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting...</title>
    <style>
      body {
        background-color: #2c2c2c;
        color: #fff;
        font-family: 'Roboto', -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif;
        margin: 0;
        padding: 0;
        opacity: 0;
        overflow: hidden;
        height: 100vh;
        width: 100vw;
      }
    </style>
    <script is:inline define:vars={{ defaultLang, languages }}>
      // Detect browser language
      function detectBrowserLanguage() {
        const browserLang = navigator.language?.split('-')[0];
        return browserLang && browserLang in languages 
          ? browserLang
          : defaultLang;
      }
      
      // Execute redirect immediately without painting the page
      const detectedLang = detectBrowserLanguage();
      window.location.replace(`/${detectedLang}/`);
    </script>
  </head>
  <body>
  </body>
</html>