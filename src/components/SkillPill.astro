---
/**
 * SkillPill Component
 * 
 * A minimal pill-style component for displaying skills and technologies
 * with a tooltip containing the description
 * 
 * CSS Dependencies:
 * - styles/components/skill-pill.css
 */
import '../styles/components/skill-pill.css';

interface Props {
  name: string;
  description?: string;
}

const { name, description } = Astro.props;
---

<div class="skill-pill" data-tooltip={description}>
  <span>{name}</span>
</div>

