---
/**
 * SkillsAndTechnologies Component
 * 
 * A section displaying skills and technologies in a pill style layout with tooltips
 */
import SkillPill from './SkillPill.astro';
import '../styles/skills-technologies.css';
import { useTranslations } from '../i18n/utils';

interface Skill {
  name: string;
  description?: string;
}

interface Props {
  skills: Skill[];
  technologies: Skill[];
  currentLanguage?: string;
}

const { skills, technologies, currentLanguage = 'en' } = Astro.props;
const t = useTranslations(currentLanguage);
---

<section id="skills-and-technologies" class="skills-tech-section">
  <h2 class="section-heading">{t('profile.skills')} {t('profile.and')} {t('profile.technologies')}</h2>
  
  <div class="skills-tech-container">
    <div class="group">
      <h3 class="group-title">{t('profile.skills')}</h3>
      <div class="pills-container">
        {skills.map((skill) => (
          <SkillPill name={skill.name} description={skill.description} />
        ))}
      </div>
    </div>
    
    <div class="group">
      <h3 class="group-title">{t('profile.technologies')}</h3>
      <div class="pills-container">
        {technologies.map((tech) => (
          <SkillPill name={tech.name} description={tech.description} />
        ))}
      </div>
    </div>
  </div>
</section> 