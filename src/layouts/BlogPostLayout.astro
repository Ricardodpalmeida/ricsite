---
/**
 * Blog Post Layout
 * 
 * Layout component for individual blog posts with multilingual support.
 */
import MainLayout from './MainLayout.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

// Get current language and translations
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { frontmatter } = Astro.props;
const formattedDate = new Date(frontmatter.pubDate).toLocaleDateString(
  lang === 'en' ? 'en-US' : 'pt-BR', 
  { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }
);
---

<MainLayout 
  title={`${frontmatter.title} | Ricardo Almeida`}
  description={frontmatter.description}
  image={frontmatter.heroImage}
  currentLanguage={lang}
>
  <main class="blog-post-container">
    <article class="blog-post">
      {frontmatter.heroImage && (
        <div class="post-hero-image">
          <img 
            src={frontmatter.heroImage} 
            alt={`Cover image for ${frontmatter.title}`}
            width="800"
            height="400"
          />
        </div>
      )}
      
      <h1 class="post-title">{frontmatter.title}</h1>
      
      <div class="post-meta">
        <time class="post-date" datetime={frontmatter.pubDate}>
          {formattedDate}
        </time>
      </div>
      
      <div class="post-content">
        <slot />
      </div>
      
      <div class="post-footer">
        <a href={`/${lang}/blog/`} class="back-link">
          {lang === 'en' ? '← Back to Blog' : '← Voltar ao Blog'}
        </a>
      </div>
    </article>
  </main>
</MainLayout>

<style>
  .blog-post-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1rem;
    min-height: calc(100vh - 200px);
    animation: fadeIn 0.5s ease-out;
  }
  
  .blog-post {
    background-color: rgba(30, 30, 30, 0.3);
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid var(--color-gray-200);
  }
  
  .post-hero-image {
    width: 100%;
    max-height: 400px;
    overflow: hidden;
  }
  
  .post-hero-image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  
  .post-title {
    font-size: var(--font-size-2xl);
    margin: 2rem 0 1rem;
    padding: 0 2rem;
    font-family: var(--font-family-title);
  }
  
  .post-meta {
    padding: 0 2rem;
    margin-bottom: 2rem;
    color: var(--color-gray-600);
    font-size: var(--font-size-sm);
    font-family: var(--font-family-base);
  }
  
  .post-content {
    padding: 0 2rem 2rem;
    font-family: var(--font-family-base);
    line-height: var(--line-height-loose);
  }
  
  .post-content :global(h2) {
    font-size: var(--font-size-xl);
    margin: 2rem 0 1rem;
    font-family: var(--font-family-title);
  }
  
  .post-content :global(h3) {
    font-size: var(--font-size-lg);
    margin: 1.5rem 0 1rem;
    font-family: var(--font-family-title);
  }
  
  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 1.5rem 0;
  }
  
  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-cosmic-latte);
    padding-left: 1rem;
    margin-left: 0;
    font-style: italic;
    color: var(--color-gray-600);
  }
  
  .post-content :global(pre) {
    background-color: rgba(0, 0, 0, 0.2);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }
  
  .post-content :global(code) {
    font-family: monospace;
    background-color: rgba(0, 0, 0, 0.2);
    padding: 0.2rem 0.4rem;
    border-radius: 2px;
  }
  
  .post-footer {
    padding: 2rem;
    border-top: 1px solid var(--color-gray-200);
  }
  
  .back-link {
    display: inline-block;
    color: var(--color-cosmic-latte);
    font-family: var(--font-family-title);
    transition: all var(--transition-base);
    padding: 0.5rem 0;
  }
  
  .back-link:hover {
    transform: translateX(-5px);
  }
  
  @media (max-width: 768px) {
    .post-title {
      font-size: var(--font-size-xl);
      padding: 0 1.5rem;
      margin-top: 1.5rem;
    }
    
    .post-meta {
      padding: 0 1.5rem;
    }
    
    .post-content {
      padding: 0 1.5rem 1.5rem;
    }
    
    .post-footer {
      padding: 1.5rem;
    }
  }
</style> 